<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("application.general.logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to t("application.general.home"),  courses_path %></li>
          <% if current_user.supervisor? || current_user.admin? %>
            <li><%= link_to t("application.general.course"), supervisor_root_url %></li>
          <% end %>
          <% if current_user.admin? %>
            <li><%= link_to t("application.general.subject"), supervisor_subjects_path %></li>
          <% end %>
          <li><%= link_to t("application.general.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("application.general.account")%> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("application.general.profile"), current_user %></li>
              <li><%= link_to t("application.general.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("application.general.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("application.general.home"),  root_path %></li>
          <li><%= link_to t("application.general.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>



